<Window x:Class="Torun.windows.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Torun.windows"
        mc:Ignorable="d"
        BorderBrush="LightSlateGray"
        BorderThickness="1,1,1,1"
        Title="Giriş - Plan Takip" Height="400" Width="650" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Torun;component/images/icon/topbarlogo.png" Foreground="{x:Null}" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <!-- log in -->
        <Border Background="#FF3B87D3" Grid.Column="0" BorderThickness="0,0,1,0" BorderBrush="LightSlateGray">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Foreground="White" Content="Giriş" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30" FontSize="22" FontFamily="Book Antiqua"/>
                <DockPanel>
                    <TextBlock x:Name="login_username" FontFamily="MS Outlook" FontSize="14">
                        <DockPanel>
                            <Image Source="/images/welcome_screen/username.png" Width="32" Height="32"/>
                            <TextBox Background="White" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana"/>
                        </DockPanel>
                    </TextBlock>
                </DockPanel>

                <DockPanel Margin="0,15,0,0">
                    <TextBlock x:Name="login_password" FontFamily="MS Outlook" FontSize="14">
                        <DockPanel>
                            <Image Source="/images/welcome_screen/password.png" Width="32" Height="32"/>
                            <PasswordBox Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana"/>
                        </DockPanel>
                    </TextBlock>
                </DockPanel>

                <Button x:Name="btnLogin" BorderBrush="White" BorderThickness="1,1,1,1"  Content="Giriş yap" Foreground="White" Width="70" Height="30" Margin="0,10,0,0" HorizontalAlignment="Right" Background="{x:Null}" Click="BtnLogin_Click"/>
            </StackPanel>

        </Border>
        <!-- sign up -->
        <Border Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="36"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Foreground="#FF3B87D3" Content="Yeni Üyelik" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30" FontSize="22" FontFamily="Book Antiqua"/>
                        <DockPanel>
                            <TextBlock x:Name="register_username" FontFamily="MS Outlook" FontSize="14">
                                <DockPanel>
                                    <Image Source="/images/welcome_screen/username_blue.png" Width="32" Height="32"/>
                                    <TextBox Background="#FF3B87D3" Foreground="White" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana"/>
                                </DockPanel>    
                            </TextBlock>
                        </DockPanel>

                        <DockPanel Margin="0,15,0,0">
                            <TextBlock x:Name="register_password" FontFamily="MS Outlook" FontSize="14">
                                <DockPanel>
                                    <Image Source="/images/welcome_screen/password_blue.png" Width="32" Height="32"/>
                                    <PasswordBox Background="#FF3B87D3" Foreground="White" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana"/>
                                </DockPanel>
                            </TextBlock>
                        </DockPanel>

                        <DockPanel Margin="0,15,0,0">
                            <TextBlock x:Name="register_password2" FontFamily="MS Outlook" FontSize="14">
                                <DockPanel>
                                    <Image Source="/images/welcome_screen/password_blue.png" Width="32" Height="32"/>
                                    <PasswordBox Background="#FF3B87D3" Foreground="White" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana"/>
                                </DockPanel>
                            </TextBlock>
                        </DockPanel>

                        <TextBlock Margin="0,15,0,0" x:Name="register_firstname" FontFamily="MS Outlook" FontSize="14">
                                <DockPanel>
                                    <Image Source="/images/welcome_screen/identification.png" Width="32" Height="32"/>
                                    <TextBox Background="#FF3B87D3" Foreground="White" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana"/>
                                </DockPanel>
                        </TextBlock>

                        <TextBlock Margin="0,15,0,0" x:Name="register_lastname" FontFamily="MS Outlook" FontSize="14">
                                <DockPanel>
                                    <Image Source="/images/welcome_screen/identification.png" Width="32" Height="32"/>
                                    <TextBox Background="#FF3B87D3" Foreground="White" Width="200" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Verdana"/>
                                </DockPanel>
                        </TextBlock>


                        <Button x:Name="btnSignUp" BorderBrush="White" BorderThickness="1,1,1,1"  Content="Üye ol" Background="#FF3B87D3" Foreground="White" Width="70" Height="30" Margin="0,10,0,0" HorizontalAlignment="Right" Click="BtnSignUp_Click" />
                    </StackPanel>
                </Border>
                
                
                <Border Grid.Row="1">
                    <Button Content="X" Width="33" Height="30" HorizontalAlignment="Right" Background="White" BorderBrush="Blue" x:Name="btnClose" Click="BtnClose_Click" Margin="3">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF5F99FF"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
